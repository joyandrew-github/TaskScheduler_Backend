{
    "name": "taskscheduler-backend",
    "version": "1.0.0",
    "description": "Backend API for TaskScheduler built with Node.js, Express, Prisma, and PostgreSQL",
    "type": "module",
    "main": "server.js",
    "author": "Joyandrew",
    "license": "ISC",
    "private": true,
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier . --check",
        "format:fix": "prettier . --write",
        "prepare": "husky install",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate deploy",
        "prisma:studio": "prisma studio",
        "prisma:reset": "prisma migrate reset --force"
    },
    "keywords": [
        "task-scheduler",
        "backend",
        "api",
        "node",
        "express",
        "prisma",
        "postgresql"
    ],
    "lint-staged": {
        "*.js": [
            "eslint .",
            "prettier . --check"
        ]
    },
    "dependencies": {
        "@prisma/client": "^6.18.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "rate-limiter-flexible": "^8.1.0",
        "winston": "^3.18.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "nodemon": "^3.1.11",
        "prettier": "^3.6.2",
        "prisma": "^6.18.0"
    }
}
